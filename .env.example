# Telegram
BOT_TOKEN=change_me
# Optional: admin user ids (comma separated)
ADMIN_USER_IDS=123456789

# Storage
STORAGE_MODE=yandex  # yandex | local

# Yandex Disk (required when STORAGE_MODE=yandex)
YANDEX_OAUTH_TOKEN=change_me
YANDEX_BASE_PATH=/Zkvpr

# Local storage (used when STORAGE_MODE=local). Path is inside the shared /data volume.
LOCAL_STORAGE_ROOT=/data/storage

# Database
SQLITE_PATH=/data/app.db

# Queue
REDIS_URL=redis://redis:6379/0

# Local Bot API (optional)
LOCAL_BOT_API_BASE=http://local-bot-api:8082
USE_LOCAL_BOT_API=0

# Observability
LOG_LEVEL=INFO

# --- prod (Caddy / HTTPS)
ACME_EMAIL=admin@adaspeas.ru
METRICS_USER=metrics
METRICS_PASS=change_me

# Image for prod compose
IMAGE=ghcr.io/nikmagrus-creator/adaspeas:latest
